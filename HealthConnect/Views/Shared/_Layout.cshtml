@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> smgr;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <link href="https://fonts.googleapis.com/css2?family=Gelasio:wght@400;700&display=swap" rel="stylesheet">
    <title>Health Connect</title>
    <header class="header">
        <a class="HealthConnectLogo" href="#">
            <h1 style="font-family: 'Gelasio', serif;">HEALTH CONNECT</h1>
        </a>
        <nav>
            <a href="#">Find Doctors</a>
            <a href="#">Video Consult</a>
            <a href="#">Medicines</a>
        </nav>
        <div class="auth-links">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="profile-dropdown">
                    <a href="javascript:void(0)" class="profile-circle">
                        <img src="~/images/download.png" width="40" height="40" alt="Profile" class="profile-img">
                    </a>
                    <div class="dropdown-menu">
                        <a href="/Profile">Profile</a>
                        <a href="javascript:void(0)" onclick="document.getElementById('logoutForm').submit();">Logout</a>
                    </div>
                </div>
            }
            else
            {
                <a href="/Account/Login">Login/Signup</a>
            }
        </div>
    </header>

    <!-- Logout Form -->
    <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" style="display: none;"></form>

</head>
<body>

    <!-- Main Content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Footer Section -->
    <footer class="footer">
        <!-- Footer Top Section -->
        <div class="footer-top">
            <h1>HEALTH CONNECT</h1>
            <nav>
                <a href="#">Find Doctors</a>
                <a href="#">Online Video Consultation</a>
                <a href="#">Medicines</a>
            </nav>
            <div class="social-icons">
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>

        <!-- Divider Line -->
        <div class="divider"></div>

        <!-- Copyright Section -->
        <p>Copyright © 2024, Health Connect. All rights reserved.</p>
    </footer>
    <script>
        document.addEventListener('click', function (event) {
            const dropdown = document.querySelector('.profile-dropdown');
            const menu = document.querySelector('.dropdown-menu');

            if (dropdown.contains(event.target)) {
                menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
            } else {
                menu.style.display = 'none';
            }
        });
    </script>

</body>
</html>
