@{
    ViewData["Title"] = "Appointment Canceled";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .cancel-card {
            border: 2px solid #dc3545;
            border-radius: 10px;
            padding: 20px;
            background-color: #f8d7da;
            color: #721c24;
        }

        .btn-dashboard {
            background-color: #8A45E6;
            color: white;
            border: none;
        }

            .btn-dashboard:hover {
                background-color: #7a3ed4;
            }
    </style>
</head>
<body>
    <div class="container text-center">
        <div class="cancel-card mx-auto">
            <h3>Appointment Canceled</h3>
            <p class="mt-3">
                Your appointment has been successfully canceled.
                If you wish to book another appointment, please visit the dashboard.
            </p>
        </div>
        <div class="mt-4">
            <a href="@Url.Action("ProfileDashboard", "Account")" class="btn btn-dashboard">
                Go to Dashboard
            </a>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

