@model IEnumerable<HealthConnect.Models.Doctor>
@{
    ViewBag.Title = "Find Doctors";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find Doctors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .background-image {
            background-image: url('/Images/FindDoctorsBackground.png');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }
    </style>
</head>

<body class="background-image d-flex flex-column">
    <div class="d-flex flex-column justify-content-center align-items-center flex-grow-1">
        <div class="text-center mb-4">
            <h1 class="h4 fw-bold text-dark">Your trusted partner in personalized healthcare</h1>
            <p class="text-muted">Search and schedule</p>
        </div>

        <div class="container">
            <form method="post" asp-action="FindDoctors" class="mb-4">
                <div class="input-group w-75 mx-auto">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-map-marker-alt text-primary"></i>
                        </span>
                    </div>
                    <input type="text" name="searchString" class="form-control" placeholder="Search by name or specialization">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info text-center">@ViewBag.Message</div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var doctor in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-3 shadow">
                                <img src="@doctor.ClinicImagePath" class="card-img-top" alt="@doctor.FullName" />
                                <div class="card-body">
                                    <h5 class="card-title">@doctor.FullName</h5>
                                    <p class="card-text">Specialization: @doctor.Specialization</p>
                                    <p class="card-text">Experience: @doctor.Experience years</p>
                                    <p class="card-text">Consultation Fee: @doctor.ConsultationFee.ToString("C")</p>
                                    <p class="card-text">Rating: @doctor.Rating</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</body>

</html>
