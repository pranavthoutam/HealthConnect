@{
    ViewBag.Title = "Find Doctors";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find Doctors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .background-image {
            background-image: url('/Images/FindDoctorsBackground.png');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }
    </style>
</head>

<body >
    <div class="background-image d-flex flex-colum d-flex flex-column justify-content-center align-items-center flex-grow-1 mt-3 mb-3">
        <div class="text-center mb-6" style="color:white">
            <h1 class="h4 fw-bold">Your trusted partner in personalized healthcare</h1>
            <p class="text-white">Search and schedule Appointments in Hyderabad</p>
        </div>
        @ViewBag.x
        @ViewBag.y
        <div class="container">
            <form method="post" asp-for="FindDoctors" class="mb-4">
                <div class="input-group w-75 mx-auto">
                    <!-- Dropdown for Places -->
                    <select name="Location" class="form-select w-25">
                        <option value="" selected>Select a place</option>
                        <option value="Madhapur">Madhapur</option>
                        <option value="Gachibowli">Gachibowli</option>
                        <option value="Uppal">Uppal</option>
                        <option value="LB Nagar">LB Nagar</option>
                        <option value="Kukatpally">Kukatpally</option>
                    </select>

                    <!-- Search Input -->
                    <input type="text" name="searchString" class="form-control w-50 required" placeholder="Search by name or specialization">

                    <!-- Submit Button -->
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>

@*             <div id="map"></div>
 *@            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info text-center">@ViewBag.Message</div>
            }

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
