@{
    ViewData["Title"] = "Appointment Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container text-center mt-5">
        <div class="card shadow-sm p-4">
            <h1 class="text-success"><i class="fas fa-check-circle"></i> Appointment Confirmed</h1>
            <p class="mt-3">Your appointment has been successfully scheduled.</p>
            <p><strong>Date:</strong> @ViewBag.AppointmentDate</p>
            <p><strong>Time Slot:</strong> @ViewBag.TimeSlot</p>
            <a href="/" class="btn btn-primary mt-3">Back to Home</a>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

