@{
    ViewData["Title"] = "Appointment Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container text-center mt-5">
        <div class="card shadow-sm p-4">
            <h1 class="text-success"><i class="fas fa-check-circle"></i> Appointment Confirmed</h1>
            <p class="mt-3">Your appointment has been successfully scheduled.</p>
            <p><strong>Date:</strong> @ViewBag.AppointmentDate</p>
            <p><strong>Time Slot:</strong> @ViewBag.TimeSlot</p>
            <a asp-controller="UserProfile" asp-action="ProfileDashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

