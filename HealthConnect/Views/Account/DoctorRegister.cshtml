@model HealthConnect.ViewModels.RegisterUserViewModel;
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex align-items-center justify-content-center min-vh-100 bg-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <img src="~/Images/HealthConnect.jpg" alt="Health Connect" class="img-fluid rounded">
                </div>
                <div class="col-md-6">
                    <div class="bg-white p-4 rounded shadow w-100" style="max-width: 400px;">
                        <h3 class="text-center mb-1">Join Health Connect</h3>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <hr class="flex-grow-1">
                            <span class="mx-2 small">Not a doctor? <a asp-action="Register" class="text-danger">Register here</a></span>
                            <hr class="flex-grow-1">
                        </div>
                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label">User Name</label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter your full name">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Create a password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Role" class="form-control visually-hidden" value="Doctor">
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Send OTP</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
