@model HealthConnect.ViewModels.RegisterUserViewModel
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .dim-hr {
            border-color: #8c8c8c; /* Light gray color for the HR */
            width: 75%; /* Reduces the width of the hr */
            margin-left: 12.5%;
        }

        .link-container {
            margin-top: -160px; /* Moves the links upward */
        }
    </style>
</head>
<body>
    <div class="d-flex align-items-center justify-content-center min-vh-100 bg-white">
            <!-- Login and Signup Links -->
        <div class="container">
            <div class="d-flex justify-content-center p-0 link-container">
                <a asp-action="Login" class="text-secondary mx-3 text-decoration-none">Login</a>
                <a asp-action="Register" class="text-primary mx-3 text-decoration-none">SignUp</a>
            </div>
            <hr class="dim-hr" />
            <div class="row align-items-center">
                <div class="col-md-6">
                    <img src="~/Images/HealthConnect.jpg" alt="Health Connect" class="img-fluid rounded" height="417" width="450">
                </div>
                <div class="col-md-6">
                    <div class="bg-white p-4 rounded shadow w-100" style="max-width: 400px;">
                        <h3 class="text-center mb-1">Join Health Connect</h3>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <hr class="flex-grow-1">
                            <span class="mx-2 small">Are you a doctor? <a asp-action="DoctorRegister" class="text-danger">Register here</a></span>
                            <hr class="flex-grow-1">
                        </div>
                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label">User Name</label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter your full name">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Create a password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Role" class="form-control visually-hidden" value="Doctor">
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
