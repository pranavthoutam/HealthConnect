@model HealthConnect.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
}

<head>
    <style>
        .auth-links {
            text-align: center;
            margin-top: 10px;
        }

            .auth-links a {
                margin: 0px 5px;
                text-decoration: none;
                color: #00BFFF;
                font-size: 16px;
                justify-content: space-between;
                color: black
            }
        .main-content {
            display: flex;
            justify-content:center;
            align-items: center;
            padding: 50px 0;
            background-color: #FFFFFF;
        }

            .main-content img {
                width: 394px;
                height: 394px;
                border-radius: 20px;
            }

        .form-container {
            background-color: rgb(196 196 196 .6);
            padding: 20px;
            height:400px;
            width:438px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-left: 20px;
            display:inline-block
        }

            .form-container h2 {
                margin-top: 0;
                text-align:center
            }

            .form-container form {
                display: flex;
                flex-direction: column;
                margin:10px 0px;
            }

                .form-container form input {
                    margin-bottom: 10px;
                    padding: 10px;
                    border: 1px solid #ccc;
                    
                    border-radius: 5px;
                }

                .form-container form button {
                    padding: 10px;
                    background-color: #00BFFF;
                    color: white;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                }

            .form-container .register-link {
                text-align: right;
                margin-bottom: 10px;
            }

                .form-container .register-link a {
                    color: red;
                    text-decoration: none;
                }
    </style>
</head>
<div class="auth-links">
    <a href="#">
        Login
    </a>
    <a href="#">
        Signup
    </a>
</div>

<body>
    <div class="main-content">
        <img alt="HealthConnect" height="417" src="~/Images/HealthConnect.jpg" width="475" />
        <div class="form-container">
            <h2>
                Join Health Connect
            </h2>
            <div class="register-link">
                <span>
                    Are you a doctor?
                    <a href="#">
                        Register here
                    </a>
                </span>
            </div>
            <form method="post">
                <div class="form-group">
                    <label for="UserName">Full Name</label>
                    <br />
                    <input asp-for="UserName" class="form-control" placeholder="Full Name" type="text" />
                    <br/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <br />
                    <input asp-for="Email" class="form-control" placeholder="Emails" type="email" />
                    <br />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Create Password</label>
                    <br />
                    <input asp-for="Password" class="form-control" placeholder="Create Password" type="password" />
                    <br />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Role">Role</label>
                    <br />
                    <select asp-for="Role" class="form-control">
                        <option value="Admin">Admin</option>
                        <option value="Doctor">Doctor</option>
                        <option value="User">User</option>
                    </select>
                    <br />
                    <br />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-primary">
                    Register
                </button>
            </form>
        </div>
    </div>
</body>
