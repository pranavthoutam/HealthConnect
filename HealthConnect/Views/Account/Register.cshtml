<html>
<head>
    <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />

</head>

<body class="bg-light">

    <!-- Auth Links below Header -->
    <div class="container py-3 d-flex justify-content-center gap-4 mt-2">
        <a href="/Account/Login" class="text-dark text-decoration-none fw-medium">Login</a>
        <a href="/Account/Register" class="text-dark text-decoration-none fw-medium">Signup</a>
    </div>

    <!-- Main Content Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <!-- Image Column -->
            <div class="col-md-6 col-lg-5 text-center mb-4 mb-md-0">
                <img src="~/Images/HealthConnect.jpg" class="img-fluid" alt="Health Connect Illustration">
            </div>
            <!-- Form Column -->
            <div class="col-md-6 col-lg-5 mt-5">
                <div class="bg-white p-4 rounded shadow-sm">
                    <h2 class="fs-4 mb-3 text-dark">Join Health Connect</h2>
                    <div class="mb-3">
                        <span>Are you a doctor? <a href="#" class="text-danger text-decoration-none">Register here</a></span>
                    </div>
                    <form>
                        <div class="mb-3">
                            <input type="text" class="form-control rounded-pill" placeholder="Full Name">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control rounded-pill" placeholder="Email">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control rounded-pill" placeholder="Create Password">
                        </div>
                        <button type="submit" class="btn btn-primary w-100 rounded-pill">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JS, Bootstrap 5 requires it -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
